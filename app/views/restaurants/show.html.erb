<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>12
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<p><strong>Reviews:</strong></p>
<% @restaurant.reviews.each do |r| %>
  <p><%= r.content %> | <%= r.rating %> stars</p>
<% end %>
<p><strong>Add a new review:</strong></p>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, as: :radio_buttons, collection: [1, 2, 3, 4, 5] %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-primary" %>
